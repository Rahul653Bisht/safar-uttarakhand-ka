<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem;
  }

  @media (max-width: 768px) {
    .search-form {
      flex-direction: column;
      gap: 0.5rem;
      width: 100%;
      margin-top: 0.5rem;
    }

    .search-inp,
    .search-btn {
      width: 100%;
    }

    .navbar-nav {
      text-align: center;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    
    <!-- Left: Logo + Explore -->
    <div class="d-flex align-items-center">
      <a class="navbar-brand" href="/listings">
        <i class="fa-regular fa-compass fa-lg" style="color: #fe424d;"></i>
      </a>
      <a class="nav-link" href="/listings">Explore</a>
    </div>

    <!-- Center: Search Bar -->
    <form class="d-flex align-items-center search-form" role="search" action="/listings/search" method="GET">
      <input class="form-control me-2 search-inp" type="search" name="q" placeholder="Search destinations" />
      <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>Search
      </button>
    </form>

    <!-- Right: Add Listing + Auth -->
    <div class="d-flex align-items-center gap-3">
      <a class="nav-link" href="/listings/new">Add new Listing</a>
      <% if (!currUser) { %>
        <a class="nav-link" href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
      <% } else { %>
        <a class="nav-link" href="/logout"><b>Log out</b></a>
      <% } %>
    </div>

  </div>
</nav>
